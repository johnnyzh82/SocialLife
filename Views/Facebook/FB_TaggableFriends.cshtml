@model IEnumerable<SocialLife.Models.FacebookFriendViewModel>
@{
    ViewBag.Title = "FBInfo";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4>Friends</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-condensed table-hover table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                    </tr>
                </table>
                <div class="bodycontainer scrollable">
                    <table class="table table-hover table-striped table-condensed table-scrollable">
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.ImageURL" />&nbsp;@Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <table>
                    <tfoot>
                        @Model.Count() friends
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>




